<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:orientation="vertical">

    <ListView
        android:id="@+id/list_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#FFC300" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layout_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#f4f4f4">

            <TextView
                android:id="@+id/txtNomeBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="TextView"
                android:textSize="22dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnCloseView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="?attr/actionModeCloseDrawable" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgPersonagem"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:src="@color/colorAccent"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:id="@+id/txtNome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/imgPersonagem"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="10dp"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/txtAltura"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/txtNome"
                        android:layout_below="@+id/txtNome"
                        android:layout_marginTop="10dp"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/txtPeso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/txtAltura"
                        android:layout_below="@+id/txtAltura"
                        android:layout_marginTop="10dp"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/txtCabelo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/txtPeso"
                        android:layout_below="@+id/txtPeso"
                        android:layout_marginTop="10dp"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/txtPele"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/txtCabelo"
                        android:layout_below="@+id/txtCabelo"
                        android:layout_marginTop="10dp"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/txtOlhos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/txtPele"
                        android:layout_below="@+id/txtPele"
                        android:layout_marginTop="10dp"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/txtAno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/txtOlhos"
                        android:layout_below="@+id/txtOlhos"
                        android:layout_marginTop="10dp"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/txtGenero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/txtAno"
                        android:layout_below="@+id/txtAno"
                        android:layout_marginTop="10dp"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/txtCriacao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/txtGenero"
                        android:layout_below="@+id/txtGenero"
                        android:layout_marginTop="10dp"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/txtEdicao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/txtCriacao"
                        android:layout_below="@+id/txtCriacao"
                        android:layout_marginTop="10dp"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/txtUrl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/txtEdicao"
                        android:layout_below="@+id/txtEdicao"
                        android:layout_marginTop="10dp"
                        android:text="TextView"
                        android:visibility="gone" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layout_films"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="6dp"
                    android:gravity="center">

                </LinearLayout>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_posters"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#f4f4f4">

            <TextView
                android:id="@+id/txtFilmBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="TextView"
                android:textSize="22dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnCloseViewFilm"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="?attr/actionModeCloseDrawable" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/set_poster_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ImageView>


    </LinearLayout>

</FrameLayout>